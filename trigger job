---
- name: Trigger jenkins job
  hosts: 127.0.0.1
  connection: local
  gather_facts: yes
  become: yes
  become_method: sudo
   
 tasks:
    - name: trigger jenkins job
      uri:
      url: http://{{ jenkins.host }}/job/{{ jenkins.job }}/build?token={{ jenkins.token }}
      user: "{{ jenkins.user }}"
      password: "{{ jenkins.password }}"
      method: POST
      force_basic_auth: yes
      status_code: 201
